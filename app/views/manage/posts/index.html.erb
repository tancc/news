<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Source</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= markdown(post.content) %></td>
        <td><%= post.source %></td>
        <td><%= link_to 'Show', manage_post_path(post) %></td>
        <td><%= link_to 'Edit', edit_manage_post_path(post) %></td>
        <td><%= link_to 'Destroy', manage_post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_manage_post_path %>
