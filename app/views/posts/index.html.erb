<div class="span12">
  <div class="post">
  <%= link_to("New post", new_post_path , :class => "btn btn-mini btn-primary pull-right")%>
  </div>
  <table class="table">
    <thead>
      <tr>
        <td> # </td>
        <td> Title </td>
        <td> Content </td>
        <td> Soruce </td>
    </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td> # </td>
          <td> <%= link_to(post.title, post_path(post)) %> </td>
          <td> <%= post.content %> </td>
          <td> <%= post.source %> </td>
          <td> <%= link_to("Edit", edit_post_path(post), :class => "btn btn-mini")%>
          <%= link_to("Delete", post_path(post), :class => "btn btn-mini", :method => :delete, :confirm => "Are you sure?" ) %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>